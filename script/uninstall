#!/bin/bash -e
#
# script/uninstall
# mas
#
# Removes mas from PREFIX.
#

# Override default prefix path with optional 1st arg
if test -n "$1"; then
  PREFIX="$1"
elif [[ $(uname -m) == 'arm64' ]]; then
  PREFIX=/opt/homebrew
else
  PREFIX=/usr/local
fi

echo "==> ðŸ”¥ Uninstalling mas from $PREFIX"

trash "$PREFIX/bin/mas" || true
